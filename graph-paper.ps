%% --- begin configuration ---
/pageheight { 11 in  } def  % page height in points
/pagewidth  { 8.5 in } def  % page width in points
/gridsize   { 5 spi  } def  % box size in points
/gridweight { 0.3    } def  % line weight in points
/gridgray   { 0.5    } def  % line grey
/dotted     { false  } def  % dotted (true) or solid (false)
%% --- end configuration ---
/spi{1 in exch div floor}def/in{72 mul}def/cm{28.34 mul}def/gridpage{2 dict begin 3 1 roll/pw exch def/ph exch def dup currentpoint 3 2 roll currentpoint pop exch pw{currentpoint exch pop moveto 0 ph rlineto 0 ph neg rmoveto}for moveto dup currentpoint exch pop exch ph{currentpoint pop exch moveto pw 0 rlineto pw neg 0 rmoveto}for end}def
%% Render
newpath 0 0 moveto pageheight pagewidth gridsize gridpage gridweight setlinewidth gridgray setgray
dotted { 1 setlinecap [0 0.5] 0 setdash } if stroke showpage
